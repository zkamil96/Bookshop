<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="900.0" prefWidth="900.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx.BookshopController">
   <TextField alignment="CENTER" maxWidth="400.0" promptText="Insert value to search in table">
      <font>
         <Font size="16.0" />
      </font>
   </TextField>

    <TableView fx:id="mainTable" maxWidth="1000.0">
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy></TableView>

    <TableView fx:id="secondTable" maxWidth="1000">
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy></TableView>

   <Button mnemonicParsing="false" text="ADD/DELETE">
      <font>
         <Font size="16.0" />
      </font>
   </Button>

   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
